# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=54320
DB_USERNAME=wellbank
DB_PASSWORD=wellbank_dev_password
DB_DATABASE=wellbank_dev
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=63790
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# HashiCorp Vault
VAULT_ADDR=http://localhost:8201
VAULT_TOKEN=dev-only-token
VAULT_NAMESPACE=wellbank

# Encryption
ENCRYPTION_ALGORITHM=aes-256-gcm

# BudPay
BUDPAY_PUBLIC_KEY=
BUDPAY_SECRET_KEY=
BUDPAY_WEBHOOK_SECRET=
BUDPAY_BASE_URL=https://api.budpay.com/api/v2

# Dojah
DOJAH_APP_ID=
DOJAH_SECRET_KEY=
DOJAH_BASE_URL=https://api.dojah.io

# File Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=wellbank-files
S3_REGION=us-east-1

# Email / SMTP (for sending OTPs, notifications)
# Development: Use MailHog at localhost:1025 (web UI at http://localhost:8025)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@wellbank.ng

# Production SMTP Example (uncomment and fill):
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=SG.your-sendgrid-api-key
# SMTP_FROM=WellBank <noreply@wellbank.ng>

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3001,http://localhost:8080,http://localhost:5173

# Sentry (Error Monitoring)
SENTRY_DSN=
